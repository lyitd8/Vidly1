@model Vidly1.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.GenreName</li>
    @if (Model.ReleaseDate !=null)
    {
        <li>
            ReleaseDate:@Model.ReleaseDate.ToString()
        </li>
    }
    @if (Model.DateAdded != null)
    {
        <li>
            DateAdded:@Model.DateAdded.ToString()
        </li>
    }
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>
