@model Vidly1.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.GenreName</li>
    @if (Model.ReleaseDate.HasValue)
    {
        <li>
            ReleaseDate:
            @Model.ReleaseDate.Value.ToLongDateString()
        </li>
    }
    @if (Model.DateAdded.HasValue)
    {
        <li>
            DateAdded:
            @Model.DateAdded.Value.ToLongDateString()
        </li>
    }
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>
